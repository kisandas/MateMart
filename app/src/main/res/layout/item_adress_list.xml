<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_2sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_8sdp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_bold"
                android:maxLines="1"
                android:text="Welcome Back"
                android:textColor="@color/dark_gray_4d4d4d"
                android:textSize="@dimen/_16sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.7" />

            <TextView
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.26"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/bg_round_corner_radius_4"
                android:backgroundTint="@color/theme_blue_38B449"
                android:fontFamily="@font/font_inter_regular"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:text="Default"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                android:fontFamily="@font/font_inter_regular"
                android:gravity="left"
                android:text="A 4 digit code has been sent
to +91 9998887776. Please entrer it below
to complete verification."
                android:textColor="@color/dark_gray_4d4d4d"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/tv_mobile_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_4sdp"
                android:fontFamily="@font/font_inter_regular"
                android:gravity="left"
                android:text="9998887776"
                android:textColor="@color/dark_gray_4d4d4d"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_address" />


            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_regular"
                android:gravity="left"
                android:text="Edit"
                android:layout_marginVertical="@dimen/_8sdp"
                android:textColor="@color/theme_blue_38B449"
                android:textSize="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_mobile_text" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_regular"
                android:gravity="left"
                android:text="Delete"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:textColor="@color/red_c70000"
                android:textSize="@dimen/_16sdp"
                app:layout_constraintEnd_toStartOf="@+id/tv_edit"
                app:layout_constraintTop_toBottomOf="@+id/tv_mobile_text" />

            <TextView
                android:id="@+id/tv_mark_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_regular"
                android:gravity="left"
                android:text="Mark as Default"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:textColor="@color/dark_gray_4d4d4d"
                android:textSize="@dimen/_16sdp"
                app:layout_constraintEnd_toStartOf="@+id/tv_delete"
                app:layout_constraintTop_toBottomOf="@+id/tv_mobile_text" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>