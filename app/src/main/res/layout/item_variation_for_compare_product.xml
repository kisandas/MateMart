<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:paddingHorizontal="4dp"
    android:id="@+id/parentLayout"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:fontFamily="@font/font_inter_regular"
        android:text="Name"
        android:textColor="@color/dark_gray_4d4d4d"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:fontFamily="@font/font_inter_medium"
        android:orientation="vertical"
        android:text="Price"
        android:textColor="@color/white"
        android:textSize="14sp">

        <TextView
            android:id="@+id/tvNetPriceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_inter_regular"
            android:text="Net Price"
            android:textColor="@color/dark_gray_4d4d4d"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvNetPriceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_inter_semibold"
            android:text="Name"
            android:textColor="@color/dark_gray_4d4d4d"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvSalePriceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/font_inter_regular"
            android:text="Sale Price"
            android:textColor="@color/dark_gray_4d4d4d"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvSalePriceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_inter_semibold"
            android:text="Name"
            android:textColor="@color/dark_gray_4d4d4d"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.14"
        android:gravity="center"
        android:orientation="vertical"
        android:text="Price"
        android:textColor="@color/white"
        android:textSize="14sp">

        <TextView
            android:id="@+id/tvAddQty"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:fontFamily="@font/font_inter_semibold"
        android:gravity="center"
            android:text="+"
            android:textColor="@color/dark_gray_4d4d4d"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvQTY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:background="@drawable/bg_round_corner_stroke_radius_color_4d4d4d_4"
            android:fontFamily="@font/font_inter_semibold"
            android:gravity="center"
            android:minWidth="36dp"
            android:padding="4dp"
            android:text="0"
            android:textColor="@color/dark_gray_4d4d4d"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvRemoveQTY"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:fontFamily="@font/font_inter_semibold"
           android:gravity="center"
            android:text="-"
            android:textColor="@color/dark_gray_4d4d4d"
            android:textSize="20sp" />


    </LinearLayout>


    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.16"
        android:gravity="center"
        android:fontFamily="@font/font_inter_regular"
        android:text="0.0"
        android:textColor="@color/dark_gray_4d4d4d"
        android:textSize="12sp" />
</LinearLayout>