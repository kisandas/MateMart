<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AddReviewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_view_shadow"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:src="@drawable/ic_back"
                app:tint="@color/black_393f42" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:fontFamily="@font/font_inter_bold"
                android:maxLines="1"
                android:text="Write Review"
                android:textColor="@color/theme_blue_38B449"
                android:textSize="18sp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/font_inter_medium"
            android:text="Name"
            android:textColor="@color/theme_blue_38B449"
            android:textFontWeight="800"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/font_inter_medium"
            android:hint="Enter your Name"
            android:text=""
            android:textColor="@color/dark_gray_4d4d4d"
            android:textColorHint="@color/hint_gray_c6c6c6"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/font_inter_medium"
            android:text="Whatâ€™s Your rate?"
            android:textColor="@color/theme_blue_38B449"
            android:textFontWeight="800"
            android:textSize="13sp" />

        <com.matemart.utils.FlexibleRatingBar
            android:id="@+id/Ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:stepSize="1"
            android:numStars="5"
            app:colorOutlineOff="@color/yellow_ffc000"
            app:colorOutlineOn="@color/yellow_ffc000"
            app:strokeWidth="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/font_inter_medium"
            android:text="Give your Review here "
            android:textColor="@color/theme_blue_38B449"
            android:textFontWeight="800"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/etReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/bg_round_corner_stroke_radius_color_4d4d4d_6"
            android:gravity="start"
            android:hint="Write here.."
            android:maxHeight="@dimen/_160sdp"
            android:minLines="5"
            android:padding="@dimen/_8sdp"
            android:text=""
            android:textColor="@color/dark_gray_4d4d4d"
            android:textColorHint="@color/dark_gray_b3b3b3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_36sdp"
            android:background="@drawable/bg_btn_blue"
            android:fontFamily="@font/font_inter_semibold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_40sdp"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


</RelativeLayout>