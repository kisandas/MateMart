<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingHorizontal="6dp"
    android:paddingVertical="4dp">

    <LinearLayout
        android:gravity="center"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvBrandName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:fontFamily="@font/font_inter_regular"
            android:text="Name"
            android:textColor="@color/dark_gray_4d4d4d"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPriceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:fontFamily="@font/font_inter_regular"
            android:text="Name"
            android:textColor="@color/dark_gray_4d4d4d"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/btnAddToCart"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="6dp"
            android:layout_marginVertical="6dp"
            android:layout_weight="0.33"
            android:background="@drawable/bg_btn_blue"
            android:fontFamily="@font/font_inter_semibold"
            android:gravity="center"
            android:text="Add to cart"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_timer" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNoteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_inter_medium"
            android:text="Note:"
            android:textColor="@color/dark_gray_4d4d4d"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvNoteDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:fontFamily="@font/font_inter_medium"
            android:text="Note:"
            android:textColor="@color/red_c70000"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>