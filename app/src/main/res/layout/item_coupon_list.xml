<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/icCheckBox"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:checked="false"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@drawable/ic_custom_checkbox"
            android:button="@null"
            app:buttonCompat="@null"
            android:padding="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCouponCode"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_text_dotted"
                android:fontFamily="@font/font_inter_regular"
                android:gravity="center"
                android:text="MISS127"
                android:textColor="@color/dark_gray_4d4d4d"
                android:textSize="@dimen/_14sdp" />


            <TextView
                android:id="@+id/tvSaveAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_bold"
                android:text="Apply Coupan code"
                android:textColor="@color/dark_gray_4d4d4d"
                android:textSize="@dimen/_15sdp" />


            <TextView
                android:id="@+id/tvCouponDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/font_inter_regular"
                android:gravity="center"
                android:text="MISS127"
                android:textColor="@color/dark_gray_4d4d4d"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/tvCouponExpiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:fontFamily="@font/font_inter_regular"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dark_gray_4d4d4d"
                android:textSize="@dimen/_13sdp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gray_b3b3b3" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>