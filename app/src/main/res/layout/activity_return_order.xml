<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activities.ReturnOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/headerlay"
            layout="@layout/header_common_title_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_medium"
                android:text="Account Holder Name"
                android:textColor="@color/theme_blue_38B449"
                android:textFontWeight="800"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/font_inter_medium"
                android:hint="Enter Account Holder Name"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text=""
                android:textColor="@color/dark_gray_4d4d4d"
                android:textColorHint="@color/hint_gray_c6c6c6"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_medium"
                android:text="Account Number"
                android:textColor="@color/theme_blue_38B449"
                android:textFontWeight="800"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etAccountNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:singleLine="true"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/font_inter_medium"
                android:hint="Enter Account Number"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text=""
                android:textColor="@color/dark_gray_4d4d4d"
                android:textColorHint="@color/hint_gray_c6c6c6"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_medium"
                android:text="Account Type"
                android:textColor="@color/theme_blue_38B449"
                android:textFontWeight="800"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etAccountType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:singleLine="true"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/font_inter_medium"
                android:hint="Enter Account Type"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text=""
                android:textColor="@color/dark_gray_4d4d4d"
                android:textColorHint="@color/hint_gray_c6c6c6"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_medium"
                android:text="IFSC Code"
                android:textColor="@color/theme_blue_38B449"
                android:textFontWeight="800"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etIFSCCode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:textAllCaps="true"
                android:maxLength="11"
                android:singleLine="true"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/font_inter_medium"
                android:hint="Enter IFSC Code"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text=""
                android:textDirection="ltr"
                android:textColor="@color/dark_gray_4d4d4d"
                android:textColorHint="@color/hint_gray_c6c6c6"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvCheckIFSC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/font_inter_regular"
            android:gravity="center"
            android:text="Check IFSC"
            android:textColor="@color/theme_blue_38B449"
            android:textSize="17sp"
            android:textStyle="" />

        <LinearLayout
            android:id="@+id/llBankDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_16sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_medium"
                android:text="Bank Details"
                android:textColor="@color/theme_blue_38B449"
                android:textFontWeight="800"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_inter_semibold"
                    android:text="Bank Name"
                    android:textColor="@color/dark_gray_4d4d4d"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvBankName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:fontFamily="@font/font_inter_bold"
                    android:text="Bank Name"
                    android:textColor="@color/theme_blue_38B449"
                    android:textSize="16sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="@color/view_filter" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_inter_semibold"
                    android:text="Branch Name"
                    android:textColor="@color/dark_gray_4d4d4d"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvBranchName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:fontFamily="@font/font_inter_bold"
                    android:text="Bank Name"
                    android:textColor="@color/theme_blue_38B449"
                    android:textSize="16sp" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/btnReturnOrder"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginVertical="30dp"
            android:background="@drawable/bg_btn_blue"
            android:fontFamily="@font/font_inter_semibold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_40sdp"
            android:text="Return Your Order"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>