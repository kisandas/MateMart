<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_marginHorizontal="8dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llview"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="90dp">
        <View
            android:id="@+id/view1"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:visibility="visible"
            android:background="@color/theme_blue_38B449"
            android:layout_weight="0.2"/>
        <ImageView
            android:id="@+id/ivThumb"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/bg_circle_themecolor"/>
        <View
            android:id="@+id/view2"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="@color/theme_blue_38B449"
            android:layout_weight="0.2"/>

    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">


        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_order_confirmed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="12dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="@font/font_inter_semibold"
                android:text="Welcome Back dhdishd diahdks hkdsah daklhdkah dkhdkl hdash dk dkjhhjads "
                android:textColor="@color/dark_gray_4d4d4d"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/font_inter_regular"
                android:maxLines="2"
                android:text="12/12/2022 hkdsah daklhdkah hkdsah daklhdkah hkdsah daklhdkah hkdsah daklhdkah hkdsah daklhdkah hkdsah daklhdkah"
                android:textColor="@color/dark_gray_b3b3b3"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>