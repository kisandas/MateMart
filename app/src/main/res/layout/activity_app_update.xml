<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activities.AppUpdateActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_update"
        android:adjustViewBounds="true"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/font_inter_semibold"
        android:text="Time to Update"
        android:textColor="@color/theme_blue_38B449"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_inter_medium"
        android:text="New Update Available!"
        android:layout_marginTop="8dp"
        android:textColor="@color/dark_gray_4d4d4d"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/font_inter_semibold"
        android:text="What's new in v1.5"
        android:textColor="@color/dark_gray_4d4d4d"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_inter_regular"
        android:text="What's new in v1.5"
        android:layout_marginTop="8dp"
        android:textColor="@color/dark_gray_4d4d4d"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/btnUpdate"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/_30sdp"
        android:background="@drawable/bg_btn_blue"
        android:fontFamily="@font/font_inter_semibold"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_40sdp"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_timer" />


    <TextView
        android:id="@+id/tvNotNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:fontFamily="@font/font_inter_medium"
        android:text="Not now"
        android:textColor="@color/dark_gray_4d4d4d"
        android:textSize="16sp" />

</LinearLayout>