<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.loopeer.shadow.ShadowView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:elevation="10dp"
        android:foreground="?attr/selectableItemBackground"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shadowMargin="@dimen/_4sdp"
        app:shadowRadius="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_2sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginVertical="@dimen/_4sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/font_inter_regular"
                    android:text="Name:"
                    android:layout_marginEnd="2dp"
                    android:textColor="@color/theme_blue_38B449"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_inter_regular"
                    android:text="₹1000"
                    android:textColor="@color/dark_gray_4d4d4d"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginVertical="@dimen/_4sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitlePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_inter_regular"
                    android:text="Phone:"
                    android:layout_marginEnd="2dp"
                    android:textColor="@color/theme_blue_38B449"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_inter_regular"
                    android:text="₹1000"
                    android:textColor="@color/dark_gray_4d4d4d"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginVertical="@dimen/_4sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitleLocality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_inter_regular"
                    android:text="Name:"
                    android:layout_marginEnd="2dp"
                    android:textColor="@color/theme_blue_38B449"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/tvLocality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_inter_regular"
                    android:text="₹1000"
                    android:textColor="@color/dark_gray_4d4d4d"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>


        </LinearLayout>
    </com.loopeer.shadow.ShadowView>


</androidx.constraintlayout.widget.ConstraintLayout>