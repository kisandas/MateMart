<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/_8sdp"
    android:paddingVertical="@dimen/_10sdp"
    tools:context=".fragments.RegisterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/font_inter_medium"
                android:text="Full Name"
                android:textColor="@color/theme_blue_14378E"
                android:textFontWeight="800"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_6sdp"
                android:background="@drawable/bg_edit_text"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_4sdp">



                <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="0.8"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/ic_profile"
                    android:drawableTint="@color/dark_gray_b3b3b3"
                    android:fontFamily="@font/font_inter_medium"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:text=""
                    android:hint="Name"
                    android:textColorHint="@color/hint_gray_c6c6c6"
                    android:textColor="@color/dark_gray_4d4d4d"
                    android:textSize="@dimen/_13sdp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/font_inter_medium"
                android:text="Phone No"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/theme_blue_14378E"
                android:textFontWeight="800"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_6sdp"
                android:background="@drawable/bg_edit_text"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_4sdp">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:drawableEnd="@drawable/ic_down_arrow"
                    android:drawableTint="@color/theme_blue_14378E"
                    android:fontFamily="@font/font_inter_medium"
                    android:text="+91"
                    android:textColor="@color/dark_gray_4d4d4d"
                    android:textSize="@dimen/_13sdp" />

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:background="#E8ECF4" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="0.8"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/ic_call"
                    android:drawableTint="@color/dark_gray_b3b3b3"
                    android:fontFamily="@font/font_inter_medium"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:text=""
                    android:textColorHint="@color/hint_gray_c6c6c6"
                    android:hint="Enter your Phone no"
                    android:textColor="@color/dark_gray_4d4d4d"
                    android:textSize="@dimen/_13sdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="@dimen/_16sdp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_checktext"
                    android:textColor="@color/dark_gray_b3b3b3"
                    android:textSize="@dimen/_11sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>




        </LinearLayout>

        <TextView
            android:id="@+id/btn_register"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_above="@id/ll_guest_login"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_btn_blue"
            android:fontFamily="@font/font_inter_semibold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_40sdp"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <LinearLayout
            android:id="@+id/ll_guest_login"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_medium"
                android:text="If you want to use as "
                android:textColor="@color/dark_gray_4d4d4d"
                android:textFontWeight="600"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_semibold"
                android:text="Guest user"
                android:textColor="@color/theme_blue_14378E"
                android:textFontWeight="600"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>