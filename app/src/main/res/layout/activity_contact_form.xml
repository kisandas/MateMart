<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ContactForm">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/headerLay"
            layout="@layout/header_common_title_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_medium"
                android:text="Your Name"
                android:textColor="@color/theme_blue_38B449"
                android:textFontWeight="800"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/font_inter_medium"
                android:hint="Name"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text=""
                android:textColor="@color/dark_gray_4d4d4d"
                android:editable="false"
                android:enabled="false"
                android:textColorHint="@color/hint_gray_c6c6c6"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_medium"
                android:text="Phone Number"
                android:textColor="@color/theme_blue_38B449"
                android:textFontWeight="800"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/font_inter_medium"
                android:hint="Name"
                android:paddingHorizontal="@dimen/_10sdp"
                android:editable="false"
                android:enabled="false"
                android:text=""
                android:textColor="@color/dark_gray_4d4d4d"
                android:textColorHint="@color/hint_gray_c6c6c6"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_medium"
                android:text="What kind of work do you want "
                android:textColor="@color/theme_blue_38B449"
                android:textFontWeight="800"
                android:textSize="13sp" />

            <com.loopeer.shadow.ShadowView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp"
                android:foreground="?attr/selectableItemBackground"
                app:cornerRadius="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_6sdp"
                app:shadowMargin="@dimen/_4sdp"
                app:shadowRadius="@dimen/_8sdp">
                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_100sdp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/font_inter_medium"
                    android:hint="Write here..."
                    android:padding="@dimen/_10sdp"
                    android:text=""
                    android:gravity="start"
                    android:textColor="@color/dark_gray_4d4d4d"
                    android:textColorHint="@color/hint_gray_c6c6c6"
                    android:textSize="13sp" />

            </com.loopeer.shadow.ShadowView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_inter_medium"
                    android:text="Your Occupation"
                    android:textColor="@color/theme_blue_38B449"
                    android:textFontWeight="800"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_inter_regular"
                    android:text="(Optional)"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:textColor="@color/dark_gray_b3b3b3"
                    android:textFontWeight="800"
                    android:textSize="11sp" />
            </LinearLayout>



            <EditText
                android:id="@+id/etOccupation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/font_inter_medium"
                android:hint="Occupation"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text=""
                android:textColor="@color/dark_gray_4d4d4d"
                android:textColorHint="@color/hint_gray_c6c6c6"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_inter_medium"
                android:text="Upload Material Photo"
                android:textColor="@color/theme_blue_38B449"
                android:textFontWeight="800"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="Name">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_choose_png"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_inter_regular"
                    android:text="No file chosen"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/hint_gray_c6c6c6"
                    android:textFontWeight="800"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="40dp"
        android:layout_marginVertical="@dimen/_16sdp"
        android:background="@drawable/bg_btn_blue"
        android:fontFamily="@font/font_inter_medium"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="Submit Detail"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</RelativeLayout>