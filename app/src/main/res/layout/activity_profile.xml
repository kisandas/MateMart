<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rl_main_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        tools:context=".activity.ProfileActivity">


        <include
            android:id="@+id/header"
            layout="@layout/header_common_title_layout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_16sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile_pic"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dummy_img" />

                    <ImageView
                        android:id="@+id/iv_editProfile"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg_circle_white"
                        android:backgroundTint="@color/white"
                        android:padding="@dimen/_6sdp"
                        android:src="@drawable/ic_camera" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_header"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/font_inter_extra_bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="mark juker"
                    android:textColor="@color/theme_blue_38B449"
                    android:textSize="@dimen/_18sdp" />


                <LinearLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font_inter_medium"
                        android:text="First Name"
                        android:textColor="@color/theme_blue_38B449"
                        android:textFontWeight="800"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/edtFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/bg_edit_text"
                        android:fontFamily="@font/font_inter_medium"
                        android:hint="Name"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/dark_gray_4d4d4d"
                        android:textColorHint="@color/hint_gray_c6c6c6"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font_inter_medium"
                        android:text="Last Name"
                        android:textColor="@color/theme_blue_38B449"
                        android:textFontWeight="800"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/edtLastName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/bg_edit_text"
                        android:fontFamily="@font/font_inter_medium"
                        android:hint="Name"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/dark_gray_4d4d4d"
                        android:textColorHint="@color/hint_gray_c6c6c6"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font_inter_medium"
                        android:text="Email Address"
                        android:textColor="@color/theme_blue_38B449"
                        android:textFontWeight="800"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/bg_edit_text"
                        android:fontFamily="@font/font_inter_medium"
                        android:hint="Name"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/dark_gray_4d4d4d"
                        android:textColorHint="@color/hint_gray_c6c6c6"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginVertical="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/btn_reset"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_round_corner_stroke_radius_color_4d4d4d_6"
                        android:fontFamily="@font/font_inter_regular"
                        android:gravity="center"
                        android:text="Reset"
                        android:textColor="@color/dark_gray_4d4d4d"
                        android:textSize="@dimen/_16sdp"
                        app:layout_constraintBottom_toBottomOf="@+id/btn_update"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/btn_update"
                        app:layout_constraintWidth_percent="0.4" />

                    <TextView
                        android:id="@+id/btn_update"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_btn_blue"
                        android:fontFamily="@font/font_inter_semibold"
                        android:gravity="center"
                        android:text="Update"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintWidth_percent="0.55" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_8sdp"
                    android:background="@color/gray_e3e3e3" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font_inter_medium"
                        android:text="Phone No."
                        android:textColor="@color/theme_blue_38B449"
                        android:textFontWeight="800"
                        android:textSize="@dimen/_13sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.8"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_6sdp"
                            android:background="@drawable/bg_edit_text"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/_4sdp">

                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp" />

                            <TextView
                                android:id="@+id/tvCountryCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/ic_down_arrow"
                                android:drawableTint="@color/theme_blue_38B449"
                                android:fontFamily="@font/font_inter_medium"
                                android:text="+91"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/dark_gray_4d4d4d"
                                android:textSize="@dimen/_13sdp" />

                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginHorizontal="@dimen/_4sdp"
                                android:background="#E8ECF4" />

                            <EditText
                                android:id="@+id/edtPhone"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_weight="0.8"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/font_inter_medium"
                                android:hint="Phone no"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:text=""
                                android:textColor="@color/dark_gray_4d4d4d"
                                android:textColorHint="@color/hint_gray_c6c6c6"
                                android:textSize="@dimen/_13sdp" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/sendOtp"
                            android:gravity="end|center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/theme_blue_38B449"
                            android:fontFamily="@font/font_inter_regular"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:text="Send OTP"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</RelativeLayout>