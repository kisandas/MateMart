<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LocationActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginVertical="@dimen/_16sdp"
        android:adjustViewBounds="false"
        android:src="@drawable/img_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_account_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginVertical="@dimen/_20sdp"
        android:fontFamily="@font/font_inter_extra_bold"
        android:text="Enter your location"
        android:textColor="@color/theme_blue_38B449"
        android:textSize="@dimen/_23sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/title_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_inter_medium"
        android:text="State"
        android:layout_marginTop="@dimen/_24sdp"
        android:textColor="@color/theme_blue_38B449"
        android:textFontWeight="800"
        android:textSize="@dimen/_13sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_account_login" />


    <AutoCompleteTextView
        android:id="@+id/et_state"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:fontFamily="@font/font_inter_medium"
        android:hint="Enter your State"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginVertical="@dimen/_6sdp"
        android:text=""
        android:background="@drawable/bg_edit_text"
        android:textColor="@color/dark_gray_4d4d4d"
        android:textColorHint="@color/hint_gray_c6c6c6"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_state" />


    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_inter_medium"
        android:text="City"
        android:layout_marginTop="@dimen/_16sdp"
        android:textColor="@color/theme_blue_38B449"
        android:textFontWeight="800"
        android:textSize="@dimen/_13sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_state" />


    <AutoCompleteTextView
        android:id="@+id/et_city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:fontFamily="@font/font_inter_medium"
        android:hint="Enter your city"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginVertical="@dimen/_6sdp"
        android:text=""
        android:background="@drawable/bg_edit_text"
        android:textColor="@color/dark_gray_4d4d4d"
        android:textColorHint="@color/hint_gray_c6c6c6"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_name" />


    <TextView
        android:id="@+id/title_pincode"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_inter_medium"
        android:text="Pin Code"
        android:textColor="@color/theme_blue_38B449"
        android:textFontWeight="800"
        android:textSize="@dimen/_13sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_city" />


    <AutoCompleteTextView
        android:id="@+id/et_pincode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:fontFamily="@font/font_inter_medium"
        android:hint="Enter your Pincode"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginVertical="@dimen/_6sdp"
        android:text=""
        android:background="@drawable/bg_edit_text"
        android:textColor="@color/dark_gray_4d4d4d"
        android:textColorHint="@color/hint_gray_c6c6c6"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_pincode" />


    <TextView
        android:id="@+id/btn_save"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_btn_blue"
        android:fontFamily="@font/font_inter_semibold"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_40sdp"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pincode" />


</androidx.constraintlayout.widget.ConstraintLayout>